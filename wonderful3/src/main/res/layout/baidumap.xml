<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  

   
    
    <Button
                       android:id="@+id/order_add_btn"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_marginLeft="40dp"
                       android:layout_marginTop="40dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginEnd="40dp"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true"

                       android:background="@drawable/caipiao"

                      
                      />
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="餐厅酒店查询"/>
    
    <Button
                       android:id="@+id/order_add_btn1"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_marginLeft="40dp"
                       android:layout_marginTop="40dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginEnd="40dp"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/gongjiao"

                      
                      />
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="公交查询"/>
    
    <Button
                       android:id="@+id/order_add_btn2"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_marginLeft="40dp"
                       android:layout_marginTop="40dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginEnd="40dp"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/huilv"

                      
                      />
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="路线规划"/>
    <Button
        android:id="@+id/order_add_btn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/weather"
        android:text="天气查询"

        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="天气查询"/>




        

</LinearLayout>
